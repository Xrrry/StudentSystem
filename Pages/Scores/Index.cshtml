        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectNO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExamDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ScoreID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ScoreID">Details</a> |
