@model StudentSystem.Pages.Scores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Scores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Scores.ScoreID" />
            <div class="form-group">
                <label asp-for="Scores.StudentNO" class="control-label"></label>
                <input asp-for="Scores.StudentNO" class="form-control" />
                <span asp-validation-for="Scores.StudentNO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scores.SubjectNO" class="control-label"></label>
                <input asp-for="Scores.SubjectNO" class="form-control" />
                <span asp-validation-for="Scores.SubjectNO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scores.Score" class="control-label"></label>
                <input asp-for="Scores.Score" class="form-control" />
                <span asp-validation-for="Scores.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scores.ExamDate" class="control-label"></label>
                <input asp-for="Scores.ExamDate" class="form-control" />
                <span asp-validation-for="Scores.ExamDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
